<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/pdlg_color_gray"
    tools:context=".AddProblemsActivity">

    <include
        android:id="@+id/addproblemActivityToolBar"
        layout="@layout/toolbar_for_all">

    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/addproblemActivityToolBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/addproblemImageView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/addproblemActivityToolBar"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="8dp"
                android:backgroundTint="@android:color/black"
                android:background="@drawable/input_style"
                android:padding="3dp"
                android:scaleType="fitXY"
                android:src="@drawable/select_image" />

            <EditText
                android:id="@+id/addproblemDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="7dp"
                android:background="@drawable/input_style"
                android:hint="@string/Description"
                android:padding="8dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="18dp" />

            <Button
                android:id="@+id/addproblembtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_style"
                android:text="@string/Upload"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>