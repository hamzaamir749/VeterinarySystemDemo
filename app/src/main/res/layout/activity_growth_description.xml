<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pdlg_color_gray"
    tools:context=".UserSection.Growth.GrowthDescriptionActivity">

    <include
        android:id="@+id/gda_toolbar"
        layout="@layout/toolbar_for_all">

    </include>
    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/gda_loading"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:background="@drawable/loading_background"
        app:SpinKit_Color="@color/goldish"
        />
    <ScrollView
        android:id="@+id/gda_scroll"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/gda_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gd_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/IncreaseMilk"
                android:padding="10dp"
                android:textAlignment="center"
                android:background="@drawable/input_style"
                android:textColor="@color/golden"
                android:textSize="22sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:text="@string/Foodname"
                android:textColor="@color/golden"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gd_foodname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@android:color/white"
                android:text="Cattle Disease Guide. This comprehensive disease guide provides information on diseases that can affect individual animals or an entire herd." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:text="@string/Quantity"
                android:textSize="22sp"
                android:textColor="@color/golden"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gd_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@android:color/white"
                android:text="Cattle Disease Guide. This comprehensive disease guide provides information on diseases that can affect individual animals or an entire herd." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:text="@string/Usage"
                android:textColor="@color/golden"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gd_usage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@android:color/white"
                android:text="Cattle Disease Guide. This comprehensive disease guide provides information on diseases that can affect individual animals or an entire herd." />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>