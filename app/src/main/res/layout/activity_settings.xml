<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity.SettingsActivity"
    android:background="@color/loginBackgroundcolor"
    >

    <include
        layout="@layout/toolbar_for_all"
        android:id="@+id/settings_toolbar"
        >

    </include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_toolbar"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:id="@+id/Settings_profile_image"
                android:src="@drawable/navheaderprofilepicicon"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                >
                  <ImageView
                       android:layout_width="25dp"
                       android:layout_height="30dp"
                       android:layout_marginLeft="5dp"
                       android:background="@drawable/settings_name_icon"
                       android:layout_marginTop="5dp"
                       />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:layout_marginLeft="8dp"
                    android:textSize="30sp"
                    android:textColor="@color/pdlg_color_white"
                    />
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:id="@+id/edt_update_name"
                android:textSize="22sp"
                android:textColorHint="@color/btn_update_color"
                android:textAlignment="center"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                >
                   <ImageView
                       android:layout_width="25dp"
                       android:layout_height="30dp"
                       android:layout_marginLeft="5dp"
                       android:background="@drawable/email_settings_icon"
                       android:layout_marginTop="5dp"
                       />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:layout_marginLeft="8dp"
                    android:textSize="30sp"
                    android:textColor="@color/pdlg_color_white"
                    />

            </LinearLayout>
            <EditText
                android:textAlignment="center"
                android:hint="Email"
                android:id="@+id/edt_update_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:textSize="22sp"
                android:textColorHint="@color/btn_update_color"

                android:layout_marginLeft="30dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                >
                 <ImageView
                     android:layout_width="25dp"
                     android:layout_height="30dp"
                     android:layout_marginLeft="5dp"
                     android:background="@drawable/mobile_settings_icon"
                     android:layout_marginTop="5dp"
                     />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone:"
                    android:layout_marginLeft="8dp"
                    android:textSize="30sp"
                    android:textColor="@color/pdlg_color_white"
                    />
            </LinearLayout>
            <EditText
                android:textAlignment="center"
                android:hint="Phone No"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:id="@+id/edt_update_phone"
                android:textSize="22sp"
                android:textColorHint="@color/btn_update_color"
                android:layout_marginLeft="30dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                >
                 <ImageView
                     android:layout_width="25dp"
                     android:layout_height="30dp"
                     android:layout_marginLeft="5dp"
                     android:background="@drawable/address_settings_icon"
                     android:layout_marginTop="5dp"
                     />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address:"
                    android:layout_marginLeft="8dp"
                    android:textSize="30sp"
                    android:textColor="@color/pdlg_color_white"
                    />
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Addresss"
                android:id="@+id/edt_update_address"
                android:textSize="22sp"
                android:textColorHint="@color/btn_update_color"
                android:textAlignment="center"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"/>
            <Button
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Profile"
                android:id="@+id/btn_update_profile"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/pdlg_color_white"
                android:background="@drawable/btn_settings_update"
                android:padding="10dp"
                />

        </LinearLayout>
    </ScrollView>

    </RelativeLayout>