<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/input_with_background"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    >
    <ImageView
        android:id="@+id/sod_medicine_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="fitCenter"
        android:layout_marginLeft="5dp"
        android:src="@drawable/rating_icon"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:id="@+id/sod_medicine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medicine Name"
            android:textColor="@color/goldish"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="17sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/sod_medicine_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="Quantity: 0"
            android:textStyle="italic" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/sod_medicine_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: 1000 RS"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

</LinearLayout>