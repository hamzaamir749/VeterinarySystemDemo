<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pdlg_color_gray"
    tools:context=".user_doctor_Activity.User_doctor_booked_Activity">

    <include
        android:id="@+id/udb_toolbar"
        layout="@layout/toolbar_for_all">

    </include>






    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/udb_toolbar"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/udb_doc_img"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:src="@drawable/profileicon" />

            <TextView
                android:id="@+id/udb_doc_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:drawableLeft="@drawable/ic_user_outline_black_24dp"
                android:fontFamily="@font/novasquare"
                android:hint="Doctor Name"

                android:padding="8dp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/udb_doc_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:drawableLeft="@drawable/ic_phone_android_black_24dp"
                android:fontFamily="@font/novasquare"
                android:hint="Mobile Number"
                android:padding="8dp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/udb_doc_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:drawableLeft="@drawable/ic_address_city_black_24dp"
                android:fontFamily="@font/novasquare"
                android:hint="Place"
                android:padding="8dp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/udb_doc_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:drawableLeft="@drawable/ic_address_city_black_24dp"
                android:fontFamily="@font/novasquare"
                android:hint="Rating"
                android:inputType="text"
                android:padding="8dp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <Button
                android:id="@+id/udb_appoint_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/button_style"
                android:text="@string/appointdoctor"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <Button
                android:id="@+id/udb_appoint_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/button_style"
                android:text="@string/cancelAppointmentDoc"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:visibility="gone" />
            <Button
                android:id="@+id/call_btn_client"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="@string/Call"
                android:background="@drawable/call_background"

                />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>