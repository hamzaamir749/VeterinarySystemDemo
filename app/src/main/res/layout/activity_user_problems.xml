<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProblemsActivity">

    <include
        layout="@layout/toolbar_for_all"
        android:id="@+id/userProblemsToolbar">

    </include>
    <ImageButton
        android:id="@+id/add_new_post_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/add_post_high"
        android:scaleType="centerCrop"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="4dp"
        android:background="@color/loginBackgroundcolor"
        android:baselineAlignBottom="false"
        android:focusableInTouchMode="false"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/userProblemRecycler"
        android:layout_below="@id/userProblemsToolbar"
        ></android.support.v7.widget.RecyclerView>

</RelativeLayout>