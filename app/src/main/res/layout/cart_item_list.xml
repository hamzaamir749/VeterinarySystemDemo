<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pdlg_color_yellow"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/tvCartItemProductId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pdlg_color_yellow"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivCartItemImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/nav_store_order" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:id="@+id/tvCross"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="1dp"
                android:background="@drawable/notification_badge"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="X"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCartItemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Medicine Name"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Store: "
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvCartItemStoreName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Umer V-S"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs. "
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvCartItemDiscountedPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp" />

                </LinearLayout>

                <!--  <LinearLayout
                      android:layout_width="wrap_content"
                      android:orientation="horizontal"
                      android:id="@+id/cartItemDiscountedPriceLayout"
                      android:layout_height="wrap_content">
                      <TextView
                          android:layout_width="wrap_content"
                          android:text="Rs. 0"
                          android:textSize="12sp"
                          android:id="@+id/tvCartItemPrice"
                          android:layout_height="wrap_content" />
                      <TextView
                          android:layout_width="wrap_content"
                          android:text="-20%"
                          android:textSize="12sp"
                          android:layout_marginLeft="5dp"
                          android:id="@+id/tvCartPercentDiscount"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="5dp" />

                  </LinearLayout>
  -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnMinus"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="-"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvCartItemQuantity"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btnPlus"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="+"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:visibility="visible" />

            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>